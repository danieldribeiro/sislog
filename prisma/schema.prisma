generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      String   // "admin", "contabil", etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Driver {
  id          Int      @id @default(autoincrement())
  name        String
  cpf         String   @unique
  phone       String
  cnhNumber   String
  cnhValidity DateTime
  birthDate   DateTime
  age         Int?
  trips       Trip[]
}

model Employee {
  id        Int      @id @default(autoincrement())
  name      String
  cpf       String   @unique
  phone     String
  role      String   // "administrativo", "financeiro", etc.
  createdAt DateTime @default(now())
}

model Vehicle {
  id           Int      @id @default(autoincrement())
  plate        String   @unique
  model        String
  year         Int
  registration String
  trips        Trip[]
}

model Trip {
  id            Int      @id @default(autoincrement())
  driver        Driver   @relation(fields: [driverId], references: [id])
  driverId      Int
  vehicle       Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId     Int
  departureDate DateTime
  returnDate    DateTime?
  origin        String
  destination   String
  status        String   // "futura", "em_andamento", "conclu√≠da"
  totalCost     Float
  cargo         String
  weight        Float
  distance      Float
  notes         String?
}
